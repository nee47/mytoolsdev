generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model tools {
  id          BigInt      @id @default(autoincrement())
  created_at  DateTime    @default(now()) @db.Timestamptz
  title       String
  description String
  url         String
  owner       BigInt
  user        users       @relation(fields: [owner], references: [id])

  @@index([owner])
}

model users {
  id          BigInt      @id @default(autoincrement())
  created_at  DateTime    @default(now()) @db.Timestamptz
  user        String?
  password    String
  email       String
  tools       tools[]
}
